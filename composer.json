{
    "name": "mazraara/custom-framework",
    "description": "Custom framework",
    "require": {
        "php": "^8.1",
        "symfony/routing": "^6.1",
        "symfony/http-foundation": "^6.1",
        "twig/twig": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9",
        "squizlabs/php_codesniffer": "*"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "start": [
            "php -S localhost:8000 -t ./public"
        ],
        "stop": [
            "killall -9 php"
        ]
    }
}
